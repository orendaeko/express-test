{
  "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
			"importHelpers": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "lib": ["es6","DOM"],
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": ".",
      "paths": {
				"*": [
					"node_modules/*",
					"src/types/*"
				],
      }
  },
  "include": [
      "src/**/*"
  ]
}
